@model projetBiblio.Models.COURANT
@{
    ViewBag.Title = "AjoutCourant";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<hr />
<div class="container">
    <h2 class="font-weight-bold">Ajouter un courant littéraire</h2>
</div>

<hr />
<div class="container">
    <form id="formCourant" name="formCourant" action="" method="post" enctype="multipart/form-data">
        @if (Model != null)
        {
            <input type="hidden" name="ID_COURANT" id="ID_COURANT" value="@Model.ID_COURANT" />
        }
        <div class="row">
            <div class="col-xs-4">
                <div class="form-group">
                    <label>COURANT LITTERAIRE</label>
                    <input type="text" id="NOM_COURANT" name="NOM_COURANT" class="form-control" value="@(Model!=null? Model.NOM_COURANT:"")" required />
                </div>
                <div class="form-group">
                    <label>GENRE LITTERAIRE</label>

                    <select id="ID_GENRE" name="ID_GENRE" class="form-control" aria-label="Large">
                        @foreach (var data in ViewBag.listeGenre)
                        {
                            <option value="@data.ID_GENRE">@data.ID_GENRE- @data.NOM_GENRE</option>
                        }
                    </select>
                </div>
            </div>

        </div>
        <div>
            <div class="form-group">
                @if (Model == null)
                {
                    <input type="submit" id="enregistrer" name="enregistrer" value="Enregistrer" class="btn btn-primary" />

                }
                else
                {
                    <input type="submit" id="modifier" name="modifier" value="Enregistrer Modification" class="btn btn-success" />
                    <a href="~/Courant/Courant" class="btn btn-default">Annuler</a>
                }
            </div>
        </div>
    </form>
    <hr />
    <div class="jumbotron">
    <div class="table-responsive">
        <table class="table table-bordered">
            <tr>
                <td>#</td>
                <th>COURANT LITTERAIRE</th>
                <th>GENRE LITTERAIRE</th>
                <th>DATE DE SAISIE</th>
            </tr>
            @foreach (var data in ViewBag.listeCourant)
            {
                <tr>
                    <td>@data.ID_COURANT</td>
                    <td>@data.NOM_COURANT</td>
                    <td>@data.ID_GENRE</td>
                    <td>@data.DATE_SAISIE</td>
                    <td><a href="~/Courant/ModifierCourant/@data.ID_COURANT" class="btn btn-success btn-block"><span class="glyphicon glyphicon-edit"></span> Modifier</a></td>
                    <td><a href="~/Courant/SupprimerCourant/@data.ID_COURANT" class="btn btn-danger btn-block"><span class="glyphicon glyphicon-remove"></span> Supprimer</a></td>
                </tr>
            }
        </table>
       </div>
    </div>
</div>



