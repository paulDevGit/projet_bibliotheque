@model projetBiblio.Models.AUTEUR
@{
    ViewBag.Title = "AjoutAuteur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />
<div class="container">
    <h2 class="font-weight-bold">Ajout d'un auteur</h2>
</div>
<hr />
<div class="container">
    <form id="formAuteur" name="formAuteur" action="" method="post" enctype="multipart/form-data">
        @if (Model != null)
        {
            <input type="hidden" name="ID_EDITEUR" id="ID_EDITEUR" value="@Model.ID_AUTEUR" />
        }
        <div class="row">
            <div class="col-xs-4">
                <div class="form-group">
                    <label> AUTEUR</label>
                    <input type="text" id="NOM_AUTEUR" name="NOM_AUTEUR" class="form-control" value="@(Model!=null? Model.NOM_AUTEUR:"")" required />
                </div>
            </div>
        </div>
        <div class="form-group">
            @if (Model == null)
            {
                <input type="submit" id="enregistrer" name="enregistrer" value="Enregistrer" class="btn btn-primary" />

            }
            else
            {
                <input type="submit" id="modifier" name="modifier" value="Enregistrer Modification" class="btn btn-success" />
                <a href="~/Auteur/AjoutAuteur" class="btn btn-default">Annuler</a>
            }
        </div>
    </form>
    <hr />
    <div class="jumbotron">
        <div class="table-responsive">
            <table class="table table-bordered">
                <tr>
                    <th>#</th>
                    <th>NOM DE L'AUTEUR</th>
                    <th>DATE DE SAISIE</th>
                </tr>
                @foreach (var data in ViewBag.listeAuteur)

                {
                    <tr>
                        <td>@data.ID_AUTEUR</td>
                        <td>@data.NOM_AUTEUR</td>
                        <td>@data.DATE_SAISIE</td>
                        <td><a href="~/Auteur/ModifierAuteur/@data.ID_AUTEUR" class="btn btn-success btn-block"><span class="glyphicon glyphicon-edit"></span> Modifier</a></td>
                        <td><a href="~/Auteur/SupprimerAuteur/@data.ID_AUTEUR" class="btn btn-danger btn-block"><span class="glyphicon glyphicon-remove"></span> Supprimer</a></td>
                    </tr>
                }

            </table>
        </div>


    </div>
</div>




